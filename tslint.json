{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "align": [true, "parameters", "statements"],
    "semicolon": [true, "always", "ignore-interfaces"],
    "max-classes-per-file": [true, 1, "exclude-class-expressions"],
    "typedef-whitespace": [true, "nospace", "space"]
  },
  "rulesDirectory": []
}
